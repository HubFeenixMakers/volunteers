.flex.flex-col
  = form_for @member do |f|
    - if @member.errors.any?
      #error_explanation
        %h2= "#{pluralize(@member.errors.count, "error")} prohibited this member from being saved:"
        %ul
          - @member.errors.full_messages.each do |message|
            %li= message

    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :public
      = f.check_box :public
    .field
      = f.label :Bio
      = f.rich_text_area :bio
    .actions
      = f.submit 'Save'
